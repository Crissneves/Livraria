@model Livraria.Models.LivroViewModel
@{
    ViewBag.Title = "Cadastrar Livros";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Livros", "Livros", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
     <!-- area de campos do form -->
    <hr />
    <div id="actions" class="row">
        <div class="row">
            <div class="form-group col-md-4">
              
                @Html.LabelFor(m => m.IBSN)
                @Html.TextBoxFor(m => m.IBSN, new { @class = "form-control", @placeholder="Digite o ISBN"} )
                
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Autor.Nome)           
                @Html.TextBoxFor(m => m.Autor.Nome, new { @class = "form-control", @placeholder = "Digite o nome do Autor" })
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @placeholder = "Digite o nome do livro" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Preco)
                @Html.TextBoxFor(m => m.Preco, new { @class = "form-control", @placeholder="Digite o valor" })               
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.DataPublicacao)
                @Html.TextBoxFor(m => m.DataPublicacao, new { @class = "form-control", @placeholder = "Digite a data da publicação" })
                
            </div>
            <div class="form-group col-md-4">                             
                @Html.LabelFor(m => m.ImagemCapa)
                @Html.TextBoxFor(m => m.ImagemCapa, new { @class = "form-control", @type="file" })
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="#" class="btn btn-default">Cancelar</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
